<RecipeDefs>

   <!-- =============Mosin–Nagant============== -->

   <RecipeDef>
    <defName>Gun_mosin_cwm</defName>
    <label>Make Mosin–Nagant</label>
    <description>Make Mosin–Nagant.</description>
    <jobString>Making Mosin–Nagant</jobString>
	<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>	
	<workSpeedStat>SmithingSpeed</workSpeedStat>
    <workAmount>25000</workAmount>
	<workSkill>Crafting</workSkill>
    <products>
        <Gun_mosin_cwm>1</Gun_mosin_cwm>
    </products>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Steel</li>
				</thingDefs>
			</filter>
			<count>50</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>WoodLog</li>
				</thingDefs>
			</filter>
			<count>20</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>Component</li>
				</thingDefs>
			</filter>
			<count>1</count>
		</li>
    </ingredients>
	<fixedIngredientFilter>
         <thingDefs>
            <li>Steel</li>
			<li>WoodLog</li>
			<li>Component</li>
         </thingDefs>
    </fixedIngredientFilter>
	<recipeUsers>
		<li>TableMachining</li>
	</recipeUsers>
	<skillRequirements>
		<li>
			<skill>Crafting</skill>
			<minLevel>5</minLevel>
		</li>
	</skillRequirements>
   </RecipeDef>
  
